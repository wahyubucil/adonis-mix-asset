{
  "name": "adonis-mix-asset",
  "version": "2.3.0",
  "description": "Laravel Mix for Asset Bundler on AdonisJS",
  "main": "build/providers/MixAssetProvider.js",
  "files": [
    "build/commands",
    "build/providers",
    "build/setup",
    "build/src",
    "build/templates",
    "build/instructions.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc && npm run copy:files",
    "copy:files": "copyfiles \"templates/*\" build",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json wahyubucil/adonis-mix-asset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wahyubucil/adonis-mix-asset.git"
  },
  "keywords": [
    "AdonisJS",
    "Adonis Laravel Mix",
    "Adonis asset bundler"
  ],
  "author": "wahyubucil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wahyubucil/adonis-mix-asset/issues"
  },
  "homepage": "https://github.com/wahyubucil/adonis-mix-asset#readme",
  "devDependencies": {
    "@adonisjs/core": "^5.1.7",
    "@adonisjs/mrm-preset": "^4.0.1",
    "@adonisjs/require-ts": "^2.0.4",
    "@adonisjs/sink": "^5.1.3",
    "@adonisjs/view": "^6.0.2",
    "@types/node": "^15.3.0",
    "@types/webpack-bundle-analyzer": "^4.4.0",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^3.0.1",
    "doctoc": "^2.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-adonis": "^1.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "github-label-sync": "^2.0.0",
    "husky": "^6.0.0",
    "japa": "^3.1.1",
    "laravel-mix": "^6.0.19",
    "mrm": "^3.0.1",
    "np": "^7.5.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4",
    "webpack": "^5.37.0"
  },
  "dependencies": {
    "webpack-bundle-analyzer": "^4.4.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.1.7",
    "@adonisjs/view": "^6.0.2",
    "laravel-mix": "^6.0.19"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "commands": [
      "adonis-mix-asset/build/commands"
    ],
    "providers": [
      "adonis-mix-asset"
    ]
  }
}
