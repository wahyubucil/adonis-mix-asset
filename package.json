{
  "name": "adonis-mix-asset",
  "version": "2.2.1",
  "description": "Laravel Mix for Asset Bundler on AdonisJs v5",
  "main": "build/providers/MixAssetProvider.js",
  "files": [
    "build/commands",
    "build/providers",
    "build/setup",
    "build/src",
    "build/templates",
    "build/instructions.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc && npm run copy:files",
    "copy:files": "copyfiles \"templates/*\" build",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json wahyubucil/adonis-mix-asset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wahyubucil/adonis-mix-asset.git"
  },
  "keywords": [
    "AdonisJs",
    "Adonis Laravel Mix",
    "Adonis v5 asset bundler"
  ],
  "author": "wahyubucil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wahyubucil/adonis-mix-asset/issues"
  },
  "homepage": "https://github.com/wahyubucil/adonis-mix-asset#readme",
  "devDependencies": {
    "@adonisjs/core": "^5.0.4-preview-rc-2.1",
    "@adonisjs/mrm-preset": "^3.0.0",
    "@adonisjs/require-ts": "^2.0.2",
    "@adonisjs/sink": "^1.0.17",
    "@adonisjs/view": "^3.1.0",
    "@types/node": "^14.14.33",
    "@types/webpack-bundle-analyzer": "^3.9.1",
    "commitizen": "^4.2.3",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^3.0.1",
    "doctoc": "^2.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-adonis": "^1.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "github-label-sync": "^2.0.0",
    "husky": "^5.1.3",
    "japa": "^3.1.1",
    "laravel-mix": "^6.0.13",
    "mrm": "^2.6.0",
    "np": "^7.4.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.24.4"
  },
  "dependencies": {
    "webpack-bundle-analyzer": "^4.4.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.0.4-preview-rc",
    "@adonisjs/view": "^3.1.0",
    "laravel-mix": "^6.0.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "commands": [
      "adonis-mix-asset/build/commands"
    ],
    "providers": [
      "adonis-mix-asset"
    ]
  }
}
